{.section item}
  <div id="productWrapper">
    
    <!-- This displays all images/videos associated with the product. Style this accordingly. -->
    <div id="productSlideshow">
      {.repeated section items}
        {.image?}
          <img {@|image-meta} />
        {.end}
        {.video?}
          {@|video}
        {.end}
      {.end}
    </div>

    <!-- This shows the status (sold out/on sale), price, and description (excerpt) text -->
    <div id="productDetails">
      {@|product-status}
		<div id="pLeft">
      		<h1 class="product-title">{title}</h1>

      	</div>
		<div id="pCtr">

      {.excerpt?}
        <div class="product-excerpt">
          {excerpt}
        </div>
      {.end}
      	</div>
      	<div id="pRight">
 			{@|product-price}
      		{@|product-checkout}
      	</div>

    </div>

    <!-- This displays any text/blocks added to the Additional Info tab -->
    {.section body}
    <div class="product-description">
      {@}
    </div>

  </div>
  <script>
  jQuery(document).ready(function($){
  	var viewportWidth = jQuery(window).width();
 
  	//alert('doc ready');
  		var p1=$( "#pCtr .product-excerpt").html().split("<h2");
  		
  	//	alert("p="+p1[0]);
  		$("#pLeft").append(p1[0]);
  		$(".product-excerpt").html("<h2"+p1[1]);
  		

  		if (viewportWidth>700){
   			$("#pCtr").css('height',$("#productDetails").height()); 		 		
  		}
  		alert($(".product-price .sqs-money-native").text())
  		var pPrice=$(".product-price .sqs-money-native").text();
  		if (pPrice=="0.00") {
  			$(".product-price").css('display','none');
  			var lmButton='<div class="sqs-block-button"><div class="sqs-block-button-container--center">';
				lmButton+='<a href="/contact" class="sqs-block-button-element--small sqs-block-button-element">Learn More</a>';
				lmButton+='</div></div>';
  			
  			$("#pRight").html(lmButton);
  		}	
   		  		    		 	  			
  });
  $(window).load(function() {
  		changeBall()
  		$('.Header .Cart .Cart-inner .sqs-cart-quantity').bind('DOMNodeInserted DOMSubtreeModified DOMNodeRemoved', function () {
 			changeBall();
  		});
  	function changeBall(){
  		var pQuant=$(".Header .Cart .Cart-inner .sqs-cart-quantity").text();
  		
  		
  		if (pQuant=="1") {
  			$(".Cart-inner").css('background-color','#fff653');
  		}
  		if (pQuant=="2") {
  			$(".Cart-inner").css('background-color','#2c2f8c');
  		}
  		if (pQuant=="3") {
  			$(".Cart-inner").css('background-color','#ff2c2b');
  		}  		
  		if (pQuant=="4") {
  			$(".Cart-inner").css('background-color','#622a8b');
  		}
  		if (pQuant=="5") {
  			$(".Cart-inner").css('background-color','#e28420');
  		}
  		if (pQuant=="6") {
  			$(".Cart-inner").css('background-color','#016436');
  		}
  		if (pQuant=="7") {
  			$(".Cart-inner").css('background-color','#b30101');
  		}
  		if (pQuant=="8") {
  			$(".Cart-inner").css('background-color','#000');
  		}  
  	}	 
  });
  
  </script>
  {.end}
{.end}