{.section item}
  <div id="productWrapper">
    
    <!-- This displays all images/videos associated with the product. Style this accordingly. -->
    <div id="productSlideshow">
      {.repeated section items}
        {.image?}
          <img {@|image-meta} />
        {.end}
        {.video?}
          {@|video}
        {.end}
      {.end}
    </div>

    <!-- This shows the status (sold out/on sale), price, and description (excerpt) text -->
    <div id="productDetails">
      {@|product-status}
		<div id="pLeft">
      		<h1 class="product-title">{title}</h1>

      	</div>
		<div id="pCtr">

      {.excerpt?}
        <div class="product-excerpt">
          {excerpt}
        </div>
      {.end}
      	</div>
      	<div id="pRight">

      {@|product-checkout}
      {@|product-price}
      	</div>

    </div>

    <!-- This displays any text/blocks added to the Additional Info tab -->
    {.section body}
    <div class="product-description">
      {@}
    </div>

  </div>
  <script>
  jQuery(document).ready(function($){
  	//alert('doc ready');
  		var p1=$( "#pCtr .product-excerpt").html().split("</p>");
  		var p2=p1[0].split(">");
  		
  		alert("p="+p1[1]);
  		$("#pLeft").append("<p>"+p2[1]+"</p>");
  		$(".product-excerpt").html(p1[1]+"</p>");
  		
  		
  });
  </script>
{.end}